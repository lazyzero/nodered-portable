{
  "name": "nodered-portable",
  "productName": "nodered-portable",
  "version": "4.0.9",
  "description": "Node-RED: Portable Version",
  "homepage": "http://nodered.org",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "nodered": "node ./src/run-nodered.js",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint src --color",
    "dist": "electron-builder"
  },
  "author": "Matthew Krieg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lazyzero/nodered-portable.git"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "node-red": "^4.0.9",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.0",
    "electron": "^28.1.0"
  },
  "build": {
    "appId": "com.example.noderedportable",
    "productName": "NodeREDPortable",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": null,
    "files": [
      "**/*"
    ],
    "extraFiles": [
      {
        "from": "node_modules/node-red",
        "to": "node_modules/node-red",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/@node-red",
        "to": "node_modules/@node-red",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/express",
        "to": "node_modules/express",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/npm",
        "to": "node_modules/npm",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "zip"]
    },
    "asar": false
  }
}
